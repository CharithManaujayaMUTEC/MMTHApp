<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.BookSeatActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton10"
            android:layout_width="28dp"
            android:layout_height="57dp"
            android:layout_marginLeft="0dp"
            android:layout_weight="2"
            android:padding="8dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/menu" />

        <LinearLayout
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:textAlignment="center">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:paddingTop="5dp"
                android:text="            welcome"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_marginRight="4dp"
                android:layout_weight="0"
                android:fontFamily="sans-serif-black"
                android:paddingLeft="4dp"
                android:paddingTop="2dp"
                android:paddingRight="4dp"
                android:paddingBottom="4dp"
                android:text="Manujaya"
                android:textAlignment="center"
                android:textColor="@color/royal_blue"
                android:textSize="25dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="35dp"
            android:layout_height="61dp"
            android:layout_marginTop="-5dp"
            android:layout_weight="2"
            android:padding="0dp"
            app:srcCompat="@drawable/exytrvlicon_removebg_preview" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="450dp"
        android:layout_height="502dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="59dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:padding="15dp"
                android:text="Book Seats on any kind of transportation Mode"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="124dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:paddingTop="15dp"
                    android:paddingBottom="8dp"
                    android:text="Your Preferred Transportation Mode"
                    android:textAlignment="center"
                    android:textColor="@color/royal_blue"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:orientation="horizontal"
                    android:paddingLeft="70dp">

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0"
                        android:text="" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:padding="10dp"
                        app:srcCompat="@drawable/bus" />

                    <RadioButton
                        android:id="@+id/radioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="74dp"
                        android:layout_weight="0"
                        android:text="" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:padding="10dp"
                        app:srcCompat="@drawable/bus" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="151dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-black"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:text="Destination"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="253dp"
                    android:layout_height="55dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editDestination"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="30dp"
                        android:background="@color/orange"
                        android:fontFamily="sans-serif"
                        android:hint="   Search Place"
                        android:padding="8dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="118dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="31dp"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-black"
                    android:paddingTop="15dp"
                    android:text="Date"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        id="@+id/editDate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="30dp"
                        android:background="@color/orange"
                        android:fontFamily="sans-serif"
                        android:hint="   Select Date"
                        android:padding="8dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="118dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="31dp"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-black"
                    android:paddingTop="15dp"
                    android:text="Time"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTime"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="30dp"
                        android:background="@color/orange"
                        android:fontFamily="sans-serif"
                        android:hint="   Select Time"
                        android:padding="8dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button5"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="70dp"
                android:background="@color/royal_blue"
                android:text="Search Available Rides"
                android:textColor="@color/white" />


        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="448dp"
        android:layout_height="376dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="31dp"
                android:layout_weight="0"
                android:fontFamily="sans-serif-black"
                android:paddingTop="15dp"
                android:text="Matara(Ex1)"
                android:textColor="@color/black"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="31dp"
                android:layout_weight="0"
                android:fontFamily="sans-serif-medium"
                android:text="ND-2554"
                android:textColor="@color/black"
                android:textSize="18dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="31dp"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-black"
                    android:text="Available Seats : "
                    android:textColor="@color/black"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="31dp"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-black"
                    android:text="L3,L4,R5,R55"
                    android:textColor="@color/royal_blue"
                    android:textSize="18dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="118dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="31dp"
                    android:layout_weight="0"
                    android:fontFamily="sans-serif-black"
                    android:paddingTop="15dp"
                    android:text="Enter Seats"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_weight="1">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editSeatsNo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="30dp"
                        android:background="@color/orange"
                        android:fontFamily="sans-serif"
                        android:hint="   Select Seats"
                        android:padding="8dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button7"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="70dp"
                android:background="@color/orange"
                android:text="Book Ride"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="sans-serif-black"/>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/orange"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="112dp"
                    android:layout_height="55dp"
                    android:layout_weight="0"
                    android:background="@color/orange"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/appointment" />

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="112dp"
                    android:layout_height="55dp"
                    android:layout_weight="0"
                    android:background="@color/orange"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/parking" />

                <ImageButton
                    android:id="@+id/imageButton7"
                    android:layout_width="112dp"
                    android:layout_height="55dp"
                    android:layout_weight="0"
                    android:background="@color/orange"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/grocery_store" />

                <ImageButton
                    android:id="@+id/imageButton8"
                    android:layout_width="112dp"
                    android:layout_height="55dp"
                    android:layout_weight="0"
                    android:background="@color/orange"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/profile_user" />
            </LinearLayout>

        </TableRow>

    </com.google.android.material.bottomnavigation.BottomNavigationView>


</androidx.constraintlayout.widget.ConstraintLayout>